<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record id="qualsys_courses_views_form" model="ir.ui.view">
			<field name="name">qualsys.courses.views.form</field>
			<field name="model">qualsys.courses</field>
			<field name="arch" type="xml">
				<form string="Curso">
					<sheet>
						<group>
							<field name="code"/>
							<field name="name"/>
							<field name="start_date"/>
							<field name="end_date"/>
							<field name="duration"/>
							<field name="teacher_id"/>
							<field name="attendees_number"/>
						</group>
						<notebook>
							<page string="Asistentes">
								<field name="attendees_ids">
									<tree editable = "bottom">
										<field name="partner_id"/>
										<field name="age"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>	
			</field>
		</record>

		<record id="qualsys_courses_views_tree" model="ir.ui.view">
			<field name="name">qualsys.courses.views.tree</field>
			<field name="model">qualsys.courses</field>
			<field name="arch" type="xml">
				<tree string="Curso">
					<field name="name"/>
						<field name="start_date"/>
						<field name="end_date"/>
						<field name="duration"/>
						<field name="teacher_id"/>
						<field name="attendees_number"/>
				</tree>	
			</field>
		</record>
		
		<act_window id="qualsys_courses_action" name="Cursos" res_model="qualsys.courses" view_mode="tree,form"/>
		
		<menuitem id="qualsys_courses_menu" name="Cursos" action="qualsys_courses_action" parent="qualsys_school_root"/>
	</data>
</odoo>